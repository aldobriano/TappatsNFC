<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/intro_screen"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF"
  android:gravity="top"
  >

<RelativeLayout
android:id="@+id/welcome_txthold"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="15dp"
android:layout_marginRight="15dp"
android:layout_marginTop="15dp"
android:layout_centerHorizontal="true"
android:background="@drawable/tuttxt"
android:layout_below="@+id/tutnav"
>
			<TextView
			android:id="@+id/welcome_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="2. Place your phone next to the badge at the bus stop"
			android:textSize="15dp"
			android:textStyle="normal"
			android:textColor="#000000"
			android:paddingLeft="5dp"
			android:paddingTop="8dp"
			android:paddingBottom="10dp"
			>
			</TextView>
			
</RelativeLayout>

<ImageView
android:id="@+id/tutimage"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:layout_marginBottom="85dp"
android:layout_below="@+id/welcome_txthold"
android:src="@drawable/step2"
android:scaleType="centerCrop"
></ImageView>

<ImageView
android:id="@+id/tutimageborder"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:layout_marginBottom="85dp"
android:layout_below="@+id/welcome_txthold"
android:background="@drawable/border"
></ImageView>

<RelativeLayout
android:id="@+id/pagenav"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_above="@+id/btnholder"
android:layout_centerHorizontal="true"
android:layout_marginBottom="10dp"
>

	<ImageView
	android:id="@+id/page1"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/page_notcurrent"
	></ImageView>
	
	<ImageView
	android:id="@+id/page2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/page_current"
	android:layout_toRightOf="@+id/page1"
	android:layout_marginLeft="6dp"
	></ImageView>
	
	<ImageView
	android:id="@+id/page3"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/page_notcurrent"
	android:layout_toRightOf="@+id/page2"
	android:layout_marginLeft="6dp"
	></ImageView>
	
	<ImageView
	android:id="@+id/page4"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/page_notcurrent"
	android:layout_toRightOf="@+id/page3"
	android:layout_marginLeft="6dp"
	></ImageView>

</RelativeLayout>

<RelativeLayout
android:id="@+id/btnholder"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_marginBottom="10dp"
android:layout_alignParentBottom="true"
>

			<Button
			android:id="@+id/btn_no"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:text="I'm done. Take me to the app!"
			android:textColor="#FFFFFF"
			android:background="@drawable/btn_custom"
			>
			</Button>

</RelativeLayout>
   
</RelativeLayout>