<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/intro_screen"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/logo_background"
  android:gravity="top"
  >
  
<RelativeLayout
android:id="@+id/intro"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_marginTop="50dp"
>

			
			<TextView
			android:id="@+id/welcome_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:text="Welcome to"
			android:textSize="20dp"
			android:textStyle="normal"
			android:textColor="#FFFFFF"
			>
			</TextView>
			
			<ImageView
			android:id="@+id/logo"
			android:layout_width="130dp"
			android:layout_height="36dp"
			android:background="@drawable/logo_130px"
			android:layout_below="@+id/intro_title"
			android:layout_marginTop="30dp"
			android:layout_centerHorizontal="true"
			>
			</ImageView>

</RelativeLayout>

<RelativeLayout
android:id="@+id/welcome_txthold"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="15dp"
android:layout_marginRight="15dp"
android:layout_centerHorizontal="true"
android:layout_marginTop="20dp"
android:background="@drawable/welcome_speech"
android:layout_below="@+id/intro"
>
			<TextView
			android:id="@+id/welcome_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:text="We'd like to show you a quick introduction to Near Field Communication. Is this okay?"
			android:textSize="15dp"
			android:textStyle="normal"
			android:textColor="#000000"
			android:paddingTop="8dp"
			android:paddingRight="5dp"
			android:paddingLeft="5dp"
			android:paddingBottom="10dp"
			>
			</TextView>
			
</RelativeLayout>

<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/welcome_txthold"
android:layout_centerHorizontal="true"
android:layout_marginTop="40dp"
>

			<Button
			android:id="@+id/btn_yes"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:text="Yes! Please show me."
			android:textColor="#FFFFFF"
			android:background="@drawable/btngreen_custom"
			>
			</Button>

			<Button
			android:id="@+id/btn_no"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="5dp"
			android:layout_below="@+id/btn_yes"
			android:text="Thanks, but no thanks."
			android:textColor="#FFFFFF"
			android:background="@drawable/btn_custom"
			>
			</Button>

</RelativeLayout>
   
</RelativeLayout>